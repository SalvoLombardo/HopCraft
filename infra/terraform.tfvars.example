# Copia questo file in terraform.tfvars e compila i valori reali.
# terraform.tfvars è nel .gitignore — non committare MAI il file con i valori reali.

aws_region = "eu-south-1"

instance_type = "t3.micro"

# Deve essere globalmente unico: aggiungi il tuo cognome o un suffisso random
frontend_bucket_name = "hopcraft-frontend-tuonome"

# Genera la chiave con:
#   ssh-keygen -t ed25519 -f ~/.ssh/hopcraft -C "hopcraft-ec2"
# Poi incolla il contenuto di ~/.ssh/hopcraft.pub (la chiave PUBBLICA)
ssh_public_key = "ssh-ed25519 AAAA... tua-chiave-pubblica"

# Il tuo IP per SSH (trova il tuo IP su https://ifconfig.me)
# Usa "0.0.0.0/0" solo se non sai l'IP (meno sicuro)
my_ip = "1.2.3.4/32"
